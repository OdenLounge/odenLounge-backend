{
  "env": {
    "node": true, // Enables Node.js globals like require and process
    "es2021": true, // Enables modern JavaScript features
    "commonjs": true // Enables modern JavaScript features
  },
  "extends": [
    "eslint:recommended" // General best practices for Node.js
  ],
  "parserOptions": {
    "ecmaVersion": 2021 // ECMAScript 2021 syntax
  },
  "rules": {
    "no-console": "off", // Allow console statements
    "no-unused-vars": "warn" // Warn for unused variables
  }
}
